{{>layout/header}}
<script src="/javascript/payment/kakaoPay/success.js"></script>
<link rel="stylesheet" href="/css/payment/paymentSuccess.css">
<link rel="stylesheet" href="/css/payment/modal.css">
<link rel="stylesheet" href="/css/mainStyle.css">
</head>
<body>
<div id="modal_navi">
    작심득근
</div>
<div id="title">
    <hr>
    <div id="content">
            결제 내역
    </div>
    <hr>
    <div class="wrapper">
        <div class="payment_form">
            <span class="jaksim_font" id="form_title">상품명</span><span id="item_name" class="value_font"> : {{kakaoApprove.item_name}}</span><br>
            <span class="jaksim_font" id="form_title">PT 횟수</span><span id="ptTimes" class="value_font"> : {{kakaoApprove.ptTimes}} 회</span><br>
            <span class="jaksim_font" id="form_title">PT 기간</span><span id="ptPeriod" class="value_font"> : {{kakaoApprove.ptPeriod}} 일</span><br>
            <span class="jaksim_font" id="form_title">결제 금액</span><span id="amount" class="value_font"> : {{kakaoApprove.amount.total}} 원</span><br>
            <span class="jaksim_font" id="form_title">결제 수단</span><span id="payment_method_type" class="value_font"> : {{kakaoApprove.payment_method_type}}</span><br>
            <span class="jaksim_font" id="form_title">결제 일자</span><span id="approved_at" class="value_font"> : {{kakaoApprove.approved_at}}</span><br>
        </div>
        <div class="image">
            <img src="/image/payment.png">
        </div>
    </div>
    <button class="jaksim_btn" id="modalCloseBtn" type="button">
        닫기
    </button>
</div>
{{>layout/footer}}